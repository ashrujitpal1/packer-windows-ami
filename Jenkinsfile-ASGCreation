pipeline {
    agent any
    parameters {
        string(name: 'project_name', defaultValue: 'ASG Pipeline', description: 'Jenkins Pipeline for Packer')
    }
    environment {
        terraform_version = '1.2.7'
        packer_version = '1.8.3'
    }
      stages {  
        stage('Terraform Apply') {

                dir('./terraform'){
                pwd 
                sh 'terraform init'   
                sh 'terraform apply --auto-approve'
                }
            
        }
    }
}
